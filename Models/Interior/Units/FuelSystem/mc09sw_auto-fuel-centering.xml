<?xml version="1.0"?>

<!-- AZS-2, Automatic Fuel Centering (ATsT) -->

<PropertyList>
 <path>../../shared/switches/azs.ac</path>

 <animation>
  <type>pick</type>
  <object-name>clickspot_up</object-name>
  <visible>false</visible>
  <action>
   <button>0</button>
   <repeatable>false</repeatable>
    <binding>
      <command>nasal</command>
      <script>
	interpolate("yak-40/FuelSystem/sw_auto-fuel-centering", 1.0, 0.1 );
      </script>
    </binding>
  </action>
   <hovered>
    <binding>
      <command>set-tooltip</command>
      <tooltip-id>autofuelcenteron</tooltip-id>
      <label>Automatic Fuel
Centering ON</label>
    </binding>
   </hovered>
 </animation>

 <animation>
  <type>pick</type>
  <object-name>clickspot_down</object-name>
  <visible>false</visible>
  <action>
   <button>0</button>
   <repeatable>false</repeatable>
    <binding>
      <command>nasal</command>
      <script>
	interpolate("yak-40/FuelSystem/sw_auto-fuel-centering", 0.0, 0.1 );
      </script>
    </binding>
  </action>
   <hovered>
    <binding>
     <command>set-tooltip</command>
     <tooltip-id>autofuelcenteroff</tooltip-id>
     <label>Automatic Fuel
Centering OFF</label>
   </binding>
  </hovered>
 </animation>

 <animation>
   <type>rotate</type>
   <object-name>lever</object-name>
   <property>yak-40/FuelSystem/sw_auto-fuel-centering</property>
  <interpolation>
    <entry><ind>1.0</ind><dep>30.0</dep></entry>
    <entry><ind>0.0</ind><dep>-30.0</dep></entry>
  </interpolation>
  <axis>
    <x>0.0</x>
    <y>-1.0</y>
    <z>0.0</z>
  </axis>
 </animation>

</PropertyList>
