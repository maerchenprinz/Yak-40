<?xml version="1.0"?>

<!-- PU-27, remoe control panel of GMK-1 -->
<PropertyList>
 <path>pu-27.ac</path>

<!-- Set latitude -->
 <animation>
   <type>knob</type>
   <object-name>latitudeknob</object-name>
    <property>yak-40/GMK-1/PU-27_kn_latitude</property>
   <factor>3.666</factor>
  <center>
   <x-m>0.0</x-m>
   <y-m>0.0021</y-m>
   <z-m>-0.0141</z-m>
  </center>
  <axis>
    <x>1.0</x>
    <y>0.0</y>
    <z>0.0</z>
  </axis>
  <action>
   <binding>
    <command>property-adjust</command>
    <property>yak-40/GMK-1/PU-27_kn_latitude</property>
    <factor>1</factor>
    <min>0</min>
    <max>90</max>                
    <wrap>false</wrap>
   </binding>
  </action>
  <hovered>
   <binding>
    <command>set-tooltip</command>
    <tooltip-id>pu27lat</tooltip-id>
    <label>Set Current
Latitude</label>
   </binding>
  </hovered>
 </animation>

