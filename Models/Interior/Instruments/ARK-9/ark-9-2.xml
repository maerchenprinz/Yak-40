<?xml version="1.0"?>

<!-- ARK-9 No.2, ADF -->

<PropertyList>
 <path>ark-9.ac</path>

<!-- Mode handle -->
 <animation>
   <type>knob</type>
   <object-name>arkmodehandle</object-name>
   <property>yak-40/ARK-9/kn_mode-2</property>
    <interpolation>
     <entry>
      <ind>0.0</ind> <dep>-60.0</dep>
     </entry>
     <entry>
      <ind>1.0</ind> <dep>-30.0</dep>
     </entry>
     <entry>
      <ind>2.0</ind> <dep>30.0</dep>
     </entry>
     <entry>
      <ind>3.0</ind> <dep>60.0</dep>
     </entry>
    </interpolation>
  <center>
   <x-m>0.0</x-m>
   <y-m>0.021</y-m>
   <z-m>0.0306</z-m>
  </center>
  <axis>
    <x>-1.0</x>
    <y>0.0</y>
    <z>0.0</z>
  </axis>
   <action>
    <binding>
     <command>property-adjust</command>
     <property>yak-40/ARK-9/kn_mode-2</property>
     <factor>1</factor>
     <min>0</min>
     <max>3</max>
     <wrap>false</wrap>
    </binding>
    <binding>
     <command>nasal</command>
      <script>
	var adf2mode = ['off', 'adf', 'ant', 'ant'];
	if( getprop("instrumentation/adf[1]/serviceable" ) == 1 ) {
	setprop("instrumentation/adf[1]/mode", adf2mode[getprop("yak-40/ARK-9/kn_mode-2")] );
	}
	else {
	setprop("instrumentation/adf[1]/mode", "off" );
	}
      </script>
    </binding>
    </action>
 </animation>

<!-- Main -->
<!-- 100-1200KHz -->
 <animation>
   <type>knob</type>
   <object-name>mainFreqOuterHandle</object-name>
   <property>yak-40/ARK-9/main2Freq_100</property>
    <interpolation>
     <entry>
      <ind>100.0</ind> <dep>0.0</dep>
     </entry>
     <entry>
      <ind>200.0</ind> <dep>30.0</dep>
     </entry>
     <entry>
      <ind>300.0</ind> <dep>60.0</dep>
     </entry>
