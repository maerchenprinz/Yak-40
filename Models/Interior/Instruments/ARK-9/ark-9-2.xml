      <ind>500.0</ind> <dep>120.0</dep>
     </entry>
     <entry>
      <ind>600.0</ind> <dep>150.0</dep>
     </entry>
     <entry>
      <ind>700.0</ind> <dep>180.0</dep>
     </entry>
     <entry>
      <ind>800.0</ind> <dep>210.0</dep>
     </entry>
     <entry>
      <ind>900.0</ind> <dep>240.0</dep>
     </entry>
     <entry>
      <ind>1000.0</ind> <dep>270.0</dep>
