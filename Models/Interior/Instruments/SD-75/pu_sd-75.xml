<?xml version="1.0"?>

<!-- Remote of SD-75 DME -->

<PropertyList>
 <path>pu_sd-75.ac</path>

 <animation>
   <type>material</type>
   <object-name>sd75dig1</object-name>
   <object-name>sd75dig2</object-name>
   <object-name>sd75dig3</object-name>
   <object-name>sd75dig4</object-name>
   <object-name>sd75dig5</object-name>
   <emission>
     <red>1.0</red>
     <green>0.7</green>
     <blue>0.7</blue>
     <factor-prop>yak-40/SD-75/kn_sd-dim</factor-prop>
   </emission>
 </animation>

<!-- Switch DME/Reserve -->
 <animation>
  <type>pick</type>
  <object-name>clickspot_up</object-name>
  <visible>false</visible>
  <action>
    <button>0</button>
    <repeatable>false</repeatable>
    <binding>
      <command>nasal</command>
      <script>
	interpolate("yak-40/SD-75/sw_dme-rsrv", 1.0, 0.1 );
      </script>
    </binding>
  </action>
   <hovered>
    <binding>
      <command>set-tooltip</command>
      <tooltip-id>sdswdme</tooltip-id>
      <label>DME</label>
    </binding>
   </hovered>
 </animation>

 <animation>
  <type>pick</type>
  <object-name>clickspot_down</object-name>
  <visible>false</visible>
  <action>
    <button>0</button>
    <repeatable>false</repeatable>
    <binding>
      <command>nasal</command>
      <script>
	interpolate("yak-40/SD-75/sw_dme-rsrv", 0.0, 0.1 );
      </script>
    </binding>
  </action>
   <hovered>
    <binding>
      <command>set-tooltip</command>
      <tooltip-id>sdswrsrv</tooltip-id>
      <label>Reserve</label>
    </binding>
   </hovered>
 </animation>

 <animation>
   <type>rotate</type>
   <object-name>sdrsrvlever</object-name>
   <property>yak-40/SD-75/sw_dme-rsrv</property>
  <interpolation>
   <entry><ind>1.0</ind><dep>-20.0</dep></entry>
   <entry><ind>0.0</ind><dep>20.0</dep></entry>
  </interpolation>
  <center>
   <x-m>-0.002</x-m>
   <y-m>0.0</y-m>
   <z-m>0.0160</z-m>
  </center>
  <axis>
    <x>0.0</x>
    <y>1.0</y>
    <z>0.0</z>
  </axis>
 </animation>

<!-- Switch KM-NM -->
 <animation>
  <type>pick</type>
  <object-name>clickspot_left</object-name>
  <visible>false</visible>
  <action>
    <button>0</button>
    <repeatable>false</repeatable>
    <binding>
      <command>nasal</command>
      <script>
	interpolate("yak-40/SD-75/sw_km-nm", 1.0, 0.1 );
      </script>
    </binding>
  </action>
   <hovered>
    <binding>
      <command>set-tooltip</command>
      <tooltip-id>sdswnm</tooltip-id>
      <label>DME in NM</label>
    </binding>
   </hovered>
 </animation>

 <animation>
  <type>pick</type>
  <object-name>clickspot_right</object-name>
  <visible>false</visible>
  <action>
    <button>0</button>
    <repeatable>false</repeatable>
    <binding>
      <command>nasal</command>
      <script>
	interpolate("yak-40/SD-75/sw_km-nm", 0.0, 0.1 );
      </script>
    </binding>
  </action>
   <hovered>
    <binding>
      <command>set-tooltip</command>
      <tooltip-id>sdswkm</tooltip-id>
      <label>DME in KM</label>
    </binding>
   </hovered>
 </animation>

 <animation>
   <type>rotate</type>
   <object-name>sdkmnmlever</object-name>
   <property>yak-40/SD-75/sw_km-nm</property>
  <interpolation>
   <entry><ind>1.0</ind><dep>-20.0</dep></entry>
   <entry><ind>0.0</ind><dep>20.0</dep></entry>
  </interpolation>
  <center>
   <x-m>-0.002</x-m>
   <y-m>0.0006</y-m>
   <z-m>0.0</z-m>
  </center>
  <axis>
    <x>0.0</x>
    <y>0.0</y>
    <z>1.0</z>
  </axis>
 </animation>

<!-- Control button-->
 <animation>
  <type>pick</type>
  <object-name>sdctrlbtn</object-name>
  <visible>true</visible>
  <action>
    <button>0</button>
    <repeatable>false</repeatable>
    <binding>
      <command>nasal</command>
      <script>
	interpolate("yak-40/SD-75/btn_ctrl", 1.0, 0.1 );
      </script>
    </binding>
   <mod-up>
    <binding>
     <command>nasal</command>
      <script>
	interpolate("yak-40/SD-75/btn_ctrl", 0.0, 0.1 );
      </script>
     </binding>
    </mod-up>
  </action>
 </animation>

 <animation>
  <type>translate</type>
  <object-name>sdctrlbtn</object-name>
  <property>yak-40/SD-75/btn_ctrl</property>
  <factor>0.003</factor>
  <axis>
   <x>-1</x>
   <y>0</y>
   <z>0</z>
  </axis>
 </animation>

<!-- Frequency -->
 <animation>
  <type>knob</type>
  <object-name>sdfreqknob1</object-name>
  <property>yak-40/SD-75/kn_sd-freq1</property>
  <factor>1.0</factor>
   <center>
    <x-m>0.0</x-m>
    <y-m>-0.0472</y-m>
    <z-m>-0.0157</z-m>
   </center>
   <axis>
    <x>-1.0</x>
    <y>0.0</y>
    <z>0.0</z>
   </axis>
    <action>
     <binding>
      <command>property-adjust</command>
      <property>yak-40/SD-75/kn_sd-freq1</property>
      <factor>1.0</factor>
      <min>108</min>
      <max>118</max>
      <wrap>true</wrap>
     </binding>
    </action>
 </animation>

 <animation>
  <type>textranslate</type>
  <object-name>sd75dig2</object-name>
  <property>yak-40/SD-75/kn_sd-freq1</property>
  <factor>0.01</factor>
  <step>10</step>
  <axis>
   <x>1</x>
   <y>0</y>
   <z>0</z>
  </axis>
 </animation>

 <animation>
  <type>textranslate</type>
  <object-name>sd75dig3</object-name>
  <property>yak-40/SD-75/kn_sd-freq1</property>
  <factor>0.1</factor>
  <step>1</step>
  <axis>
   <x>1</x>
   <y>0</y>
   <z>0</z>
  </axis>
 </animation>

 <animation>
  <type>knob</type>
  <object-name>sdfreqknob2</object-name>
  <property>yak-40/SD-75/kn_sd-freq2</property>
  <factor>400</factor>
   <center>
    <x-m>0.0</x-m>
    <y-m>0.0472</y-m>
    <z-m>-0.0157</z-m>
   </center>
   <axis>
    <x>-1.0</x>
    <y>0.0</y>
    <z>0.0</z>
   </axis>
    <action>
     <binding>
      <command>property-adjust</command>
      <property>yak-40/SD-75/kn_sd-freq2</property>
      <factor>0.05</factor>
      <min>0.00</min>
      <max>1.00</max>
      <wrap>true</wrap>
     </binding>
    </action>
 </animation>

 <animation>
  <type>textranslate</type>
  <object-name>sd75dig4</object-name>
  <property>yak-40/SD-75/kn_sd-freq2</property>
  <factor>1</factor>
  <step>0.1</step>
  <axis>
   <x>1</x>
   <y>0</y>
   <z>0</z>
  </axis>
 </animation>

 <animation>
  <type>textranslate</type>
  <object-name>sd75dig5</object-name>
  <property>yak-40/SD-75/kn_sd-freq2</property>
  <factor>10</factor>
  <step>0.01</step>
  <axis>
   <x>1</x>
   <y>0</y>
   <z>0</z>
  </axis>
 </animation>

<!-- Dim knob -->
 <animation>
  <type>knob</type>
  <object-name>sddimknob</object-name>
  <property>yak-40/SD-75/kn_sd-dim</property>
  <offset-deg>0</offset-deg>
  <factor>272</factor>
   <center>
    <x-m>0.0</x-m>
    <y-m>-0.0472</y-m>
    <z-m>-0.0157</z-m>
   </center>
   <axis>
    <x>-1.0</x>
    <y>0.0</y>
    <z>0.0</z>
   </axis>
    <action>
     <binding>
      <command>property-adjust</command>
      <property>yak-40/SD-75/kn_sd-dim</property>
      <factor>0.1</factor>
      <min>0</min>
      <max>1</max>
      <wrap>false</wrap>
     </binding>
    </action>
 </animation>

<!-- Volume knob -->
 <animation>
  <type>knob</type>
  <object-name>sdvolknob</object-name>
  <property>yak-40/SD-75/kn_sd-vol</property>
  <offset-deg>0</offset-deg>
  <factor>272</factor>
   <center>
    <x-m>0.0</x-m>
    <y-m>0.0472</y-m>
    <z-m>-0.0157</z-m>
   </center>
   <axis>
    <x>-1.0</x>
    <y>0.0</y>
    <z>0.0</z>
   </axis>
    <action>
     <binding>
      <command>property-adjust</command>
      <property>yak-40/SD-75/kn_sd-vol</property>
      <factor>0.1</factor>
      <min>0</min>
      <max>1</max>
      <wrap>false</wrap>
     </binding>
    </action>
 </animation>

<!-- Text OSG -->
  <animation>
    <type>select</type>
    <object-name>textsdpu</object-name>
    <condition>
      <property>sim/panel-hotspots</property>
    </condition>
  </animation>
  <text>
    <name>textsdpu</name>
    <type type="string">literal</type>
    <text type="string">SD-75 DME PU</text>
    <draw-text type="bool">true</draw-text>
    <font>Helvetica.txf</font>
    <character-size type="double">0.02</character-size>
    <character-aspect-ratio type="double">1.0</character-aspect-ratio>
    <axis-alignment>yz-plane</axis-alignment>
    <max-height>0.05</max-height>
    <max-width>0.1</max-width>
    <font-resolution>
      <width type="int">64</width>
      <height type="int">64</height>
    </font-resolution>
    <alignment>center-center</alignment>
    <offsets>
      <x-m>  0.005 </x-m>
      <y-m>  0.000 </y-m>
      <z-m>  0.000 </z-m>
    </offsets>
  </text>
  <animation>
    <type>material</type>
    <object-name>textsdpu</object-name>
    <emission>
      <red>   1.0 </red>
      <green> 1.0 </green>
      <blue>  1.0 </blue>
    </emission>
  </animation>

</PropertyList>
