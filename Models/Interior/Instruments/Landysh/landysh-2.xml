<?xml version="1.0"?>

<!-- Landysh Comm Radio No.2-->
<PropertyList>
 <path>landysh.ac</path>

<!-- Switch -->
 <animation>
  <type>pick</type>
  <object-name>clickspot_up</object-name>
  <visible>false</visible>
  <action>
    <button>0</button>
    <repeatable>false</repeatable>
    <binding>
      <command>nasal</command>
      <script>
	interpolate("yak-40/Landysh/sw_land-2", 1.0, 0.1 );
      </script>
    </binding>
  </action>
   <hovered>
    <binding>
      <command>set-tooltip</command>
      <tooltip-id>landsw2up</tooltip-id>
      <label>Switch UP</label>
    </binding>
   </hovered>
 </animation>

 <animation>
  <type>pick</type>
  <object-name>clickspot_down</object-name>
  <visible>false</visible>
  <action>
    <button>0</button>
    <repeatable>false</repeatable>
    <binding>
      <command>nasal</command>
      <script>
	interpolate("yak-40/Landysh/sw_land-2", 0.0, 0.1 );
      </script>
    </binding>
  </action>
   <hovered>
    <binding>
      <command>set-tooltip</command>
      <tooltip-id>landsw2down</tooltip-id>
      <label>Switch DOWN</label>
    </binding>
   </hovered>
 </animation>

 <animation>
   <type>rotate</type>
   <object-name>landyshlever</object-name>
   <property>yak-40/Landysh/sw_land-2</property>
  <interpolation>
   <entry><ind>1.0</ind><dep>-25.0</dep></entry>
   <entry><ind>0.0</ind><dep>25.0</dep></entry>
  </interpolation>
  <center>
   <x-m>0.001</x-m>
   <y-m>0.0</y-m>
   <z-m>-0.023</z-m>
  </center>
  <axis>
    <x>0.0</x>
    <y>1.0</y>
    <z>0.0</z>
  </axis>
 </animation>

<!-- Volume knob -->
 <animation>
   <type>knob</type>
   <object-name>landyshvolknob</object-name>
   <property>yak-40/Landysh/kn_volume-2</property>
   <offset-deg>-135</offset-deg>
   <factor>270</factor>
  <center>
   <x-m>0.0</x-m>
   <y-m>-0.0073</y-m>
   <z-m>-0.0204</z-m>
  </center>
  <axis>
    <x>-1.0</x>
    <y>0.0</y>
    <z>0.0</z>
  </axis>
    <action>
     <binding>
      <command>property-adjust</command>
      <property>yak-40/Landysh/kn_volume-2</property>
      <factor>0.1</factor>
      <min>0</min>
      <max>1</max>
      <wrap>false</wrap>
     </binding>
    </action>
 </animation>

<!-- Frequency -->
 <animation>
  <type>knob</type>
  <object-name>landyshfreq1and2knob</object-name>
  <property>yak-40/Landysh/freq1-2</property>
  <factor>1.0</factor>
   <center>
    <x-m>0.0</x-m>
    <y-m>-0.0555</y-m>
    <z-m>-0.007</z-m>
   </center>
   <axis>
    <x>1.0</x>
    <y>0.0</y>
    <z>0.0</z>
   </axis>
    <action>
     <binding>
      <command>property-adjust</command>
      <property>yak-40/Landysh/freq1-2</property>
      <factor>1.0</factor>
      <min>110</min>
      <max>140</max>
      <wrap>true</wrap>
     </binding>
    </action>
 </animation>

 <animation>
  <type>rotate</type>
   <object-name>landyshfreq1disc</object-name>
    <property>yak-40/Landysh/freq1-2</property>
  <interpolation>
   <entry><ind>110.0</ind><dep>0.0</dep></entry>
   <entry><ind>119.5</ind><dep>0.0</dep></entry>
   <entry><ind>120.0</ind><dep>120.0</dep></entry>
   <entry><ind>129.5</ind><dep>120.0</dep></entry>
   <entry><ind>130.0</ind><dep>240.0</dep></entry>
   <entry><ind>139.5</ind><dep>240.0</dep></entry>
  </interpolation>
   <center>
    <x-m>-0.004</x-m>
    <y-m>0.0</y-m>
    <z-m>0.016</z-m>
   </center>
   <axis>
    <x>0.0</x>
    <y>-1.0</y>
    <z>0.0</z>
   </axis>
 </animation>

 <animation>
  <type>rotate</type>
   <object-name>landyshfreq2disc</object-name>
    <property>yak-40/Landysh/freq1-2</property>
    <factor>36.0</factor>
   <center>
    <x-m>-0.004</x-m>
    <y-m>0.0</y-m>
    <z-m>0.016</z-m>
   </center>
   <axis>
    <x>0.0</x>
    <y>-1.0</y>
    <z>0.0</z>
   </axis>
 </animation>

