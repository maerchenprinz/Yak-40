<!-- Compass -->
<animation>
  <type>rotate</type>
  <object-name>iku_compass</object-name>
  <property>orientation/heading-magnetic-deg</property>
  <!--<property>fdm/jsbsim/instrumentation/tks-debug</property>-->
  <axis>
    <x>1.0</x>
    <y>0.0</y>
    <z>0.0</z>
  </axis>
</animation>


<!--Needles-->
<animation>
  <type>rotate</type>
  <object-name>iku_needle1</object-name>
  <property>yak-40/instrumentation/iku/indicated-heading-l</property>
  <axis>
    <x>-1.0</x>
    <y>0.0</y>
    <z>0.0</z>
  </axis>
</animation>

<animation>
    <type>rotate</type>
    <object-name>iku_needle2</object-name>
    <property>yak-40/instrumentation/iku/indicated-heading-r</property>
    <axis>
      <x>-1.0</x>
      <y>0.0</y>
      <z>0.0</z>
    </axis>
</animation>

<!--Handles-->
<animation>
  <type>rotate</type>
  <object-name>iku_l_handle</object-name>
  <property>yak-40/instrumentation/iku/l-mode</property>
  <interpolation>
    <entry><ind>0.0</ind> <dep>0.0</dep></entry>
    <entry><ind>1.0</ind> <dep>90.0</dep></entry>
  </interpolation>
  <center>
    <x-m>0.0</x-m>
    <y-m>-0.034</y-m>
    <z-m>-0.0369</z-m>
  </center>
  <axis>
    <x>1.0</x>
    <y>0.0</y>
    <z>0.0</z>
  </axis>
</animation>
<animation>
  <type>rotate</type>
  <object-name>iku_r_handle</object-name>
  <property>yak-40/instrumentation/iku/r-mode</property>
  <interpolation>
    <entry><ind>	0.0</ind>	<dep>	0.0</dep></entry>
    <entry><ind>	1.0</ind>	<dep>	90.0</dep></entry>
  </interpolation>
  <center>
    <x-m>0.0</x-m>
    <y-m>0.034</y-m>
    <z-m>-0.0369</z-m>
  </center>
  <axis>
    <x>1.0</x>
    <y>0.0</y>
    <z>0.0</z>
  </axis>
</animation>

<!--VOR/ADF indicators-->
<animation>
  <type>rotate</type>
  <object-name>iku_l_src</object-name>
  <property>yak-40/instrumentation/iku/l-mode</property>
  <interpolation>
    <entry><ind>0.0</ind> <dep>0.0</dep></entry>
    <entry><ind>1.0</ind> <dep>120.0</dep></entry>
  </interpolation>
  <center>
    <x-m>0.0</x-m>
    <y-m>0.0</y-m>
    <z-m>-0.043</z-m>
  </center>
  <axis>
    <x>0.0</x>
    <y>-1.0</y>
    <z>0.0</z>
  </axis>
</animation>
<animation>
  <type>rotate</type>
  <object-name>iku_r_src</object-name>
  <property>yak-40/instrumentation/iku/r-mode</property>
  <interpolation>
    <entry><ind>0.0</ind> <dep>0.0</dep></entry>
    <entry><ind>1.0</ind> <dep>120.0</dep></entry>
  </interpolation>
  <center>
    <x-m>0.0</x-m>
    <y-m>0.0</y-m>
    <z-m>-0.043</z-m>
  </center>
  <axis>
    <x>0.0</x>
    <y>-1.0</y>
    <z>0.0</z>
  </axis>
</animation>

<!--  *******************      Controls      *********************   -->
<!--Left handle-->
<animation>
  <type>pick</type>
  <object-name>iku_l_handle</object-name>
  <visible>true</visible>
  <action>
    <button>0</button>
    <repeatable>false</repeatable>  
    <binding>
      <command>nasal</command>
      <script>
        if( getprop("yak-40/instrumentation/iku/l-mode") == 0.0 )
        	{interpolate("yak-40/instrumentation/iku/l-mode", 1.0, 0.1 );}
        else { interpolate("yak-40/instrumentation/iku/l-mode", 0.0, 0.1 );}
      </script>
    </binding>
  </action>
</animation>
<animation>
  <type>pick</type>
  <object-name>iku_l_handle</object-name>
  <visible>true</visible>
  <action>
    <button>3</button>
    <repeatable>false</repeatable>  
    <binding>
      <command>nasal</command>
      <script>interpolate("yak-40/instrumentation/iku/l-mode", 1.0, 0.1 );</script>
    </binding>
    </action>
</animation>
<animation>
  <type>pick</type>
  <object-name>iku_l_handle</object-name>
  <visible>true</visible>
  <action>
    <button>4</button>
    <repeatable>false</repeatable>  
    <binding>
      <command>nasal</command>
      <script>interpolate("yak-40/instrumentation/iku/l-mode", 0.0, 0.1 );</script>
    </binding>
  </action>
</animation>

<!--Right handle-->
<animation>
  <type>pick</type>
  <object-name>iku_r_handle</object-name>
  <visible>true</visible>
  <action>
    <button>0</button>
    <repeatable>false</repeatable>  
    <binding>
      <command>nasal</command>
      <script>
        if( getprop("yak-40/instrumentation/iku/r-mode") == 0.0 ){
        interpolate("yak-40/instrumentation/iku/r-mode", 1.0, 0.1 );}
        else {interpolate("yak-40/instrumentation/iku/r-mode", 0.0, 0.1 );}
      </script>
    </binding>
  </action>
</animation>
<animation>
  <type>pick</type>
  <object-name>iku_r_handle</object-name>
  <visible>true</visible>
  <action>
    <button>3</button>
    <repeatable>false</repeatable>  
    <binding>
      <command>nasal</command>
      <script>interpolate("yak-40/instrumentation/iku/r-mode", 1.0, 0.1 );</script>
    </binding>
  </action>
</animation>
<animation>
  <type>pick</type>
  <object-name>iku_r_handle</object-name>
  <visible>true</visible>
  <action>
    <button>4</button>
    <repeatable>false</repeatable>  
    <binding>
      <command>nasal</command>
      <script>interpolate("yak-40/instrumentation/iku/r-mode", 0.0, 0.1 );</script>
    </binding>
  </action>
</animation>

<!-- Text OSG -->
  <animation>
    <type>select</type>
    <object-name>textiku1</object-name>
    <condition>
      <property>sim/panel-hotspots</property>
    </condition>
  </animation>

  <text>
    <name>textiku1</name>
    <type type="string">literal</type>
    <text type="string">IKU-1</text>
    <draw-text type="bool">true</draw-text>
    <font>Helvetica.txf</font>
    <character-size type="double">0.024</character-size>
    <character-aspect-ratio type="double">1.0</character-aspect-ratio>
    <axis-alignment>yz-plane</axis-alignment>
    <max-height>0.05</max-height>
    <max-width>0.08</max-width>
    <font-resolution>
      <width type="int">64</width>
      <height type="int">64</height>
    </font-resolution>
    <alignment>center-center</alignment>
    <offsets>
      <x-m>0.015</x-m>
      <y-m>0.0</y-m>
      <z-m>0.0</z-m>
    </offsets>
  </text>
  <animation>
    <type>material</type>
    <object-name>textiku1</object-name>
    <emission>
      <red>1.0</red>
      <green>1.0</green>
      <blue>1.0</blue>
    </emission>
  </animation>

</PropertyList>
