<!-- AGB-3K, FO's AI -->
  <path>agb-3k.ac</path>

 <animation>
   <type>material</type>
   <object-name>case</object-name>
    <condition>
    <equals>
     <property>yak-40/cockpit-colour</property>
     <value>Brown</value>
    </equals>
    </condition>
   <diffuse>
     <red>1.0</red>
     <green>0.725</green>
     <blue>0.404</blue>
   </diffuse>
   <ambient>
     <red>1.0</red>
     <green>0.725</green>
     <blue>0.404</blue>
   </ambient>
   <specular>
     <red>1.0</red>
     <green>1.0</green>
     <blue>1.0</blue>
   </specular>
   <emission>
     <red>0.0</red>
     <green>0.0</green>
     <blue>0.0</blue>
   </emission>
 </animation>

